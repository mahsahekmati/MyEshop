
@model MyShop.DataLayer.Domain.Product


<div class="card col-4" style="width: 18rem ; height: 18rem">
    <img class="card-img-top" src="/ProductImages/@Model.ImageName" alt="Card image cap" style="height: 8rem;width: 8rem" >
    <div class="card-body">
        <h5 class="card-title">
            <a href="/Product/@Model.ProductId">@Model.Title</a>
        </h5>
        <p class="card-text">@Model.Price.ToString("#,0 تومان")</p>
        <a href="/Product/AddToCart/@Model.ProductId" class="btn btn-primary">افزودن به سبد خرید</a>
    </div>
</div>